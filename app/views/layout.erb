<!DOCTYPE html>
<html>
	<head>
		<title>Chitter</title>
		<link rel="stylesheet" type="text/css" href="/css/reset.css"> 
	 	<link rel="stylesheet" type="text/css" href="/css/application.css">
	</head>
	<body>
	  <header>
	<!-- 	======================================================
			Logo
			====================================================== --> 
	  	<a href='#' id="logo">Chitter</a>
	<!-- 	======================================================
			"login" & "join" buttons
			====================================================== -->
			<section id="login-join">
    		<a id="join" href="#" class="button">Join</a>
    		<a id="login" href="#" class="button">Log in</a>
    		<a id="sign-out" href="#" class="button">Sign Out</a>
	    </section>
		</header>
		<main>
			<h1 id="errors"></h1>
	<!-- 	======================================================
			"You're signed in as" message
			====================================================== -->
			<section id="signed-in">
	    	<h3 id="message"></h3>
			</section>
	<!-- 	======================================================
			Sign-up window
			====================================================== -- -->
			<ul id="signing-up">
				<li>Full Name: <input id="full_name" type="text" name="name"></li>
				<li>User Name: <input id="user_name" type="text" name="user_name"></li>
				<li>Email: <input id="email_create" type="text" name="email"></li>
				<li>Password: <input id="password_create" type="password" name="password"></li>
				<li><a id="sign-up" href="#" class="button">Sign Up</a></li>
			</ul>
	<!-- 	======================================================
			Sign-in window
			===================================================== -->
			<ul id="signing-in">
				<li>Email: <input id="email" type="text" name="email"></li>
				<li>Password: <input id="password" type="password" name="password"></li>
				<li><a href="#" id="sign-in" class="button">Sign In</a></li>
			</ul>
	<!-- 	======================================================
			Peeps
			===================================================== -->
			<section id="peeps"></section>
			<template id="peepTemplate" type="text/x-handlebars-template">
				<h1>User: {{name}}</h1>
				<h2>Username: {{user_name}}</h2>
				<p>Time: {{time_added}}</p>
				<p>Message: {{message}}</p>	
				*************************************************************
			</template>
			<a id="post-a-peep" href="#">Post a Peep</a>
	<!-- 	================================================================================
			Posting Peeps
			================================================================================ -->
			<ul id="posting-peep">
				<li><p>Message:</p></li>
				<li><textarea rows="5" cols="20" id="content" type="text" name="content"></textarea></li>
				<li><a href="#" id="post-this" class="button">Post</a></li>
			</ul>
		</main>
	<!-- 	============================================================================= -->
		<script type="text/javascript" src="js/jquery.js"></script>
		<script type="text/javascript" src="js/interface.js"></script>
		<script type="text/javascript" src="js/handlebars.js"></script>
	</body>
</html>


